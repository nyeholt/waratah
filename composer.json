{
    "name": "nswdpc/waratah",
    "description": "NSWDPC Silverstripe integration for the NSW Design System",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "nsw",
        "module",
        "theme",
        "nsw design system"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "homepage": "https://dpc.nsw.gov.au",
            "role": "Developer"
        },
        {
            "name": "Mark Taylor",
            "homepage": "https://dpc.nsw.gov.au",
            "role": "Bon Vivant"
        }
    ],
    "autoload": {
        "psr-4": {
            "NSWDPC\\Waratah\\Extensions\\": [
                "src/Extensions/"
            ],
            "NSWDPC\\Waratah\\Pages\\": [
                "src/Pages/"
            ],
            "NSWDPC\\Waratah\\Controllers\\": [
                "src/Controllers/"
            ],
            "NSWDPC\\Waratah\\Services\\": [
                "src/Services/"
            ],
            "NSWDPC\\Waratah\\Models\\": [
                "src/Models/"
            ],
            "NSWDPC\\Waratah\\Forms\\": [
                "src/Forms/"
            ]
        }
    },
    "replace": {
        "nswdpc/silverstripe-nsw-design-system": "self.version"
    },
    "require": {
        "nswdpc/silverstripe-content-boilerplate": "dev-ss410 as 0.3.0",
        "nswdpc/silverstripe-notification-boilerplate": "^0.1",
        "nswdpc/silverstripe-feedback-assist": "^0.1",
        "nswdpc/silverstripe-field-hint": "^0.1",
        "nswdpc/silverstripe-grid-helpers": "^0.1",
        "nswdpc/silverstripe-datetime-inputs": "^0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "extra": {
        "expose": [
            "themes/nswds/app/static",
            "themes/nswds/app/frontend/dist"
        ]
    }
}
